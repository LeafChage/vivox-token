{
  "name": "vivox-token",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build": "yarn format; tsc",
    "format": "prettier --write 'src/**/*.ts' ; prettier --write 'test/**/*.ts' ",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^12.12.20",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.0",
    "tslint": "^6.1.1",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "prettier": "2.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "./**/*.ts"
    ],
    "rootDir": "test"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "bracketSpacing": true
  }
}