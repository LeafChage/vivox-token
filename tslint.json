{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "src/public/**",
            "node_modules/**"
        ]
    },
    "rules": {
        "array-type": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": true,
        "ordered-imports": false,
        "no-unnecessary-initializer": true,
        "no-unused-expression": true,
        "no-duplicate-variable": true,
        "curly": true,
        "class-name": true,
        "semicolon": true,
        "triple-equals": true,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "trailing-comma": true,
        "max-classes-per-file": false,
        "no-console": false,
        "no-namespace": false,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ]
    }
}